            <svg viewBox="0 0 32 32" xmlns="http://www.w3.org/2000/svg"><path d="M16 2C8.428 2 2.25 8.028 2.25 15.424c0 2.456.666 4.776 1.83 6.756L2.5 28.5l6.575-1.685c1.905 1.015 4.095 1.589 6.425 1.589C23.572 28.404 29.75 22.376 29.75 14.976 29.75 7.576 23.572 2 16 2zm0 24.305c-2.11 0-4.095-.565-5.835-1.545l-.415-.235-3.95 1.015 1.035-3.73-.255-.425c-1.1-1.785-1.705-3.88-1.705-6.095 0-6.29 5.035-11.405 11.23-11.405 6.195 0 11.23 5.115 11.23 11.405 0 6.29-5.035 11.015-11.335 11.015zm6.13-8.36c-.335-.165-1.99-1.015-2.3-1.13-.31-.115-.535-.165-.76.165-.225.335-.875 1.13-1.07 1.365-.195.235-.39.265-.725.1-.335-.165-1.415-.535-2.695-1.685-.995-.895-1.665-2.005-1.86-2.34-.195-.335-.02-.515.145-.68.15-.15.335-.39.505-.59.17-.195.225-.335.335-.56.11-.225.055-.425-.03-.59-.08-.165-.76-1.875-1.04-2.565-.27-.67-.545-.58-.75-.59-.195-.01-.42-.01-.645-.01-.225 0-.59.085-.9.425-.31.34-1.185 1.185-1.185 2.89s1.21 3.35 1.38 3.585c.165.235 2.38 3.735 5.77 5.165 2.28.96 2.74.77 3.735.72.685-.035 1.99-.83 2.27-1.635.28-.805.28-1.495.195-1.635-.08-.135-.31-.22-.645-.385z"/></svg>
        </a>
        <a href="tel:+442079460321" class="float-btn btn-phone" aria-label="Call Now">
            <svg viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg"><path d="M493.4 24.6l-104-24c-11.3-2.6-22.9 3.3-27.5 13.9l-48 112c-4.2 9.8-1.4 21.3 6.9 28l60.6 49.6c-36 76.7-98.9 140.5-177.2 177.2l-49.6-60.6c-6.8-8.3-18.2-11.1-28-6.9l-112 48C3.9 366.5-2 378.1.6 389.4l24 104C27.1 504.2 36.7 512 48 512c256.1 0 464-207.5 464-464 0-11.2-7.7-20.9-18.6-23.4z"/></svg>
        </a>
    </div>

    <!-- SCRIPTS -->
    <script>
    document.addEventListener('DOMContentLoaded', function () {

        // --- Mobile Menu ---
        const menuToggle = document.getElementById('menu-toggle');
        const navLinksEl = document.getElementById('nav-links');
        menuToggle.addEventListener('click', () => {
            menuToggle.classList.toggle('active');
            navLinksEl.classList.toggle('active');
        });
        navLinksEl.querySelectorAll('a').forEach(a => {
            a.addEventListener('click', () => {
                menuToggle.classList.remove('active');
                navLinksEl.classList.remove('active');
            });
        });

        // --- Hero parallax ---
        const heroBg = document.querySelector('.hero-bg');
        window.addEventListener('scroll', () => {
            const y = window.scrollY;
            if (heroBg && y < window.innerHeight) {
                heroBg.style.transform = `translateY(${y * 0.25}px)`;
            }
        }, { passive: true });

        // ============================================================
        //  LEAFLET MAP ‚Äî robust init
        // ============================================================
        var zones = [
            { lat: 51.4995, lng: -0.0863, name: "Bermondsey",   postcode: "SE1",  note: "Our home base"       },
            { lat: 51.5074, lng: -0.1278, name: "London Bridge", postcode: "SE1",  note: "City & riverside"    },
            { lat: 51.5150, lng: -0.0950, name: "Southwark",     postcode: "SE1",  note: "Borough Market area" },
            { lat: 51.4890, lng: -0.1440, name: "Vauxhall",      postcode: "SW8",  note: "South bank corridor" },
            { lat: 51.4830, lng: -0.1100, name: "Brixton",       postcode: "SW2",  note: "South London"        },
            { lat: 51.4952, lng: -0.1441, name: "Kennington",    postcode: "SE11", note: "Oval area"           },
            { lat: 51.5030, lng: -0.0188, name: "Canary Wharf",  postcode: "E14",  note: "Docklands"           },
            { lat: 51.5234, lng: -0.0730, name: "Bethnal Green", postcode: "E2",   note: "East End"            },
            { lat: 51.4760, lng: -0.0600, name: "Peckham",       postcode: "SE15", note: "South East London"   },
            { lat: 51.4620, lng: -0.0900, name: "Lewisham",      postcode: "SE13", note: "South East corridor" },
            { lat: 51.5000, lng: -0.2200, name: "Clapham",       postcode: "SW4",  note: "South West London"   },
            { lat: 51.5100, lng: -0.2000, name: "Chelsea",       postcode: "SW3",  note: "West London"         },
        ];

        function makeMarkerIcon(highlight) {
            var bg    = highlight ? '#ff7a3c' : '#e8510a';
            var border = highlight ? '#ffffff' : '#c03f00';
            return L.divIcon({
                className: '',
                html: '<div style="width:22px;height:22px;background:' + bg + ';border:2.5px solid ' + border + ';border-radius:50% 50% 50% 0;transform:rotate(-45deg);box-shadow:0 3px 8px rgba(0,0,0,0.55);"></div>',
                iconSize:   [22, 22],
                iconAnchor: [11, 22],
                popupAnchor:[0, -26]
            });
        }

        function initLeafletMap() {
            var mapEl = document.getElementById('coverage-map');
            if (!mapEl || mapEl._leaflet_id) return; // already initialised

            // Ensure the container has a real height before Leaflet measures it
            mapEl.style.height = '500px';

            var leafMap = L.map('coverage-map', {
                center: [51.493, -0.115],
                zoom: 11,
                scrollWheelZoom: false,
                zoomControl: true
            });

            L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_matter/{z}/{x}/{y}{r}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>',
                subdomains: 'abcd',
                maxZoom: 19
            }).addTo(leafMap);

            // Coverage polygon
            var polygonCoords = zones.map(function(z){ return [z.lat, z.lng]; });
            L.polygon(polygonCoords, {
                color: '#e8510a', weight: 2, opacity: 0.75,
                fillColor: '#e8510a', fillOpacity: 0.10
            }).addTo(leafMap);

            // Garage pin
            var garageIcon = L.divIcon({
                className: '',
                html: '<div style="width:30px;height:30px;background:#e8510a;border:3px solid #ffffff;border-radius:50%;box-shadow:0 0 0 4px rgba(232,81,10,0.35),0 4px 12px rgba(0,0,0,0.6);display:flex;align-items:center;justify-content:center;font-size:14px;">üîß</div>',
                iconSize: [30,30], iconAnchor: [15,15], popupAnchor: [0,-20]
            });
            L.marker([51.4995, -0.0863], { icon: garageIcon })
                .addTo(leafMap)
                .bindPopup('<b style="color:#e8510a;font-size:1rem;">Premier Auto Garage</b><br>47 Bermondsey Street, SE1 3XF<br><span style="font-size:0.8rem;opacity:0.75;">020 7946 0321</span>')
                .openPopup();

            // Zone markers + sidebar
            var zonesListEl = document.getElementById('zones-list');
            zones.forEach(function(zone) {
                var marker = L.marker([zone.lat, zone.lng], { icon: makeMarkerIcon(false) })
                    .addTo(leafMap)
                    .bindPopup(
                        '<b style="color:#e8510a;">' + zone.name + '</b>' +
                        '<br><span style="font-size:0.82rem;font-weight:600;">' + zone.postcode + '</span>' +
                        '<br><span style="font-size:0.8rem;opacity:0.75;">' + zone.note + '</span>'
                    );

                if (zonesListEl) {
                    var item = document.createElement('div');
                    item.className = 'zone-item';
                    item.innerHTML =
                        '<div class="zone-dot"></div>' +
                        '<span class="zone-name">' + zone.name + '</span>' +
                        '<span class="zone-postcode">' + zone.postcode + '</span>';
                    item.addEventListener('click', function() {
                        leafMap.setView([zone.lat, zone.lng], 13, { animate: true });
                        marker.openPopup();
                        document.querySelectorAll('.zone-item').forEach(function(el){ el.style.background = ''; });
                        item.style.background = 'rgba(232,81,10,0.18)';
                    });
                    zonesListEl.appendChild(item);
                }
            });

            // Invalidate after paint to fix grey tiles
            setTimeout(function(){ leafMap.invalidateSize(true); }, 50);
            setTimeout(function(){ leafMap.invalidateSize(true); }, 300);
            setTimeout(function(){ leafMap.invalidateSize(true); }, 800);

            // Use ResizeObserver to handle any future layout shifts
            if (window.ResizeObserver) {
                new ResizeObserver(function() {
                    leafMap.invalidateSize(true);
                }).observe(mapEl);
            }
        }

        // Try to init immediately, then on load, then on scroll into view
        try { initLeafletMap(); } catch(e) {}
        window.addEventListener('load', function() {
            try { initLeafletMap(); } catch(e) {}
            setTimeout(function(){ try { initLeafletMap(); } catch(e) {} }, 200);
        });

        // Also init when the areas section scrolls into view
        var areasSection = document.getElementById('areas');
        if (areasSection && 'IntersectionObserver' in window) {
            var areaObserver = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        try { initLeafletMap(); } catch(e) {}
                        var mapEl2 = document.getElementById('coverage-map');
                        if (mapEl2 && mapEl2._leaflet_id) {
                            setTimeout(function(){ 
                                try { mapEl2._leaflet_map && mapEl2._leaflet_map.invalidateSize(true); } catch(e) {}
                            }, 100);
                        }
                    }
                });
            }, { threshold: 0.05 });
            areaObserver.observe(areasSection);
        }

        // ============================================================
        //  SCROLL-REVEAL
        // ============================================================
        var revealEls = document.querySelectorAll(
            '.service-card, .project-card, .review-card, .faq-item, .perk-item, .trust-item, .zone-item'
        );

        if ('IntersectionObserver' in window) {
            var io = new IntersectionObserver(function(entries) {
                entries.forEach(function(entry) {
                    if (entry.isIntersecting) {
                        entry.target.style.opacity   = '1';
                        entry.target.style.transform = 'translateY(0)';
                        io.unobserve(entry.target);
                    }
                });
            }, { threshold: 0.10 });

            revealEls.forEach(function(el, i) {
                el.style.opacity    = '0';
                el.style.transform  = 'translateY(28px)';
                el.style.transition = 'opacity 0.5s ease ' + ((i % 4) * 0.09) + 's, transform 0.5s ease ' + ((i % 4) * 0.09) + 's';
                io.observe(el);
            });
        }

    }); // end DOMContentLoaded
    </script>
</body>
</html>